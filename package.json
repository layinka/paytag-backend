{
  "name": "paytag-backend",
  "version": "1.0.0",
  "description": "PayTag Backend - Web3 Payments Service",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "tsc && node esbuild.config.js",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "typecheck": "tsc --noEmit",
    "generate:entity-secret": "tsx scripts/generate-entity-secret.ts"
  },
  "keywords": [
    "web3",
    "payments",
    "crypto",
    "fastify"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@circle-fin/developer-controlled-wallets": "^10.1.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@sinclair/typebox": "^0.32.15",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.9",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.28.1",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
