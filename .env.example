# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Admin Authentication
ADMIN_PASSWORD=changeme_secure_password

# JWT
JWT_SECRET=changeme_jwt_secret_key_at_least_32_chars

# Database
DATABASE_URL=./data/paytag.sqlite

# Circle Programmable Wallets (Sandbox)
CIRCLE_ENV=sandbox
CIRCLE_API_KEY=your_circle_api_key_here
CIRCLE_ENTITY_SECRET=your_circle_entity_secret_here
CIRCLE_WALLET_SET_ID=your_wallet_set_id_here

# Webhooks
WEBHOOK_SECRET=your_webhook_secret_here
PUBLIC_BASE_URL=http://localhost:3000

# OTP Settings
OTP_EXPIRY_SECONDS=600
